---
import { site } from "../content/site";

// Calculate current quarter based on month
const currentMonth = new Date().getMonth(); // 0-11
const quarter = Math.floor(currentMonth / 3) + 1; // Q1-Q4
---

<section class="contact-section">
  <div class="contact-section__inner">
    <div class="contact-section__left">
      <h2 class="contact-section__title">Let's talk about your project</h2>
      <p class="contact-section__subtitle">
        Ready to start a new project, ask about our services, or simply say hello?
      </p>
      <p class="contact-section__subtitle">
        Reach out using the contact details below or fill out our <a href="/contact" class="contact-section__form-link"><strong>enquiry form</strong></a>.
      </p>
      <div class="contact-section__badge">Limited spots in Q{quarter}</div>
    </div>
    <div class="contact-section__right">
      <div class="contact-section__info">
        <div class="contact-section__item">
          <h4 class="contact-section__label">Email</h4>
          <a href="mailto:contact@resizing.ca" class="contact-section__link">
            contact@resizing.ca
          </a>
        </div>
        <div class="contact-section__item">
          <h4 class="contact-section__label">Location</h4>
          <p class="contact-section__text">Calgary, Alberta</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-section {
    background: #f5f5f5;
    padding: 16px 10px 48px 10px;
    margin: 0;
    width: 100%;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .contact-section__inner {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 40px;
    max-width: 1400px;
    margin: 0;
    text-align: left;
  }

  .contact-section__left {
    display: flex;
    flex-direction: column;
    gap: 16px;
    align-items: flex-start;
    width: 100%;
  }

  .contact-section__badge {
    display: inline-block;
    padding: 8px 16px;
    background: #1a1a1a;
    color: #ffffff;
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    border-radius: 4px;
    margin-bottom: 8px;
  }

  .contact-section__title {
    font-size: 56px;
    font-weight: 700;
    letter-spacing: -0.03em;
    line-height: 1.1;
    color: #1a1a1a;
    margin: 0;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  .contact-section__subtitle {
    font-size: 18px;
    font-weight: 400;
    color: rgba(0, 0, 0, 0.7);
    margin: 0;
    max-width: 400px;
    line-height: 1.5;
  }

  .contact-section__right {
    width: 100%;
  }

  .contact-section__info {
    display: flex;
    flex-direction: column;
    gap: 24px;
    align-items: flex-start;
    width: 100%;
  }

  .contact-section__item {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .contact-section__label {
    font-size: 0.75rem;
    font-weight: 600;
    color: #1a1a1a;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .contact-section__link {
    font-size: 16px;
    font-weight: 400;
    color: rgba(0, 0, 0, 0.7);
    text-decoration: none;
    line-height: 1.5;
    transition: opacity 0.2s ease;
  }

  .contact-section__link:hover {
    opacity: 0.6;
  }

  .contact-section__text {
    font-size: 16px;
    font-weight: 400;
    color: rgba(0, 0, 0, 0.7);
    margin: 0;
    line-height: 1.5;
  }

  .contact-section__form-link {
    color: rgba(0, 0, 0, 0.7);
    text-decoration: underline;
    transition: opacity 0.2s ease;
  }

  .contact-section__form-link:hover {
    opacity: 0.6;
  }

  @media (max-width: 768px) {
    .contact-section {
      padding: 20px 10px 36px;
    }

    .contact-section__inner {
      gap: 32px;
    }

    .contact-section__title {
      font-size: 40px;
    }
  }
</style>
