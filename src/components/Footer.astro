---
import { site, type SiteConfig } from "../content/site";

type Author = SiteConfig["author"];

const { author = site.author } = Astro.props as { author?: Author };
const year = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer__inner">
    <div class="footer__left">
      <span class="footer__logo">Resizing</span>
      <div class="footer__info">
        <p>Currently Working, In Calgary, AB</p>
        <p>contact@resizing.ca</p>
      </div>
      <p class="footer__copyright">Â© {year} Resizing. All rights reserved.</p>
    </div>
    <div class="footer__right">
      <div class="footer__col">
        <h4 class="footer__col-title">Navigation</h4>
        <a href="/services">Services</a>
        <a href="/studio">Studio</a>
        <a href="/work">Work</a>
        <a href="/contact">Contact</a>
      </div>
      <div class="footer__col">
        <h4 class="footer__col-title">Socials</h4>
        <a href="https://instagram.com" target="_blank" rel="noopener">Instagram</a>
        <a href="https://linkedin.com" target="_blank" rel="noopener">LinkedIn</a>
      </div>
      <div class="footer__col">
        <h4 class="footer__col-title">Legal</h4>
        <a href="/legal">Privacy Policy</a>
        <a href="/legal">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: #f0f0f0;
    border-radius: 12px;
    padding: 60px 48px;
    margin: 40px 10px 10px 10px;
  }

  .footer__inner {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    align-items: start;
  }

  .footer__left {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .footer__logo {
    font-size: 72px;
    font-weight: 700;
    letter-spacing: -0.03em;
    line-height: 1;
    color: #222;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  .footer__info {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .footer__info p {
    font-size: 14px;
    font-weight: 400;
    color: #555;
    margin: 0;
    line-height: 1.5;
  }

  .footer__copyright {
    font-size: 13px;
    color: #888;
    margin: 0;
    margin-top: 8px;
  }

  .footer__right {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 32px;
    padding-top: 8px;
  }

  .footer__col {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .footer__col-title {
    font-size: 15px;
    font-weight: 600;
    color: #222;
    margin: 0 0 4px 0;
  }

  .footer__col a {
    font-size: 14px;
    font-weight: 400;
    color: #555;
    text-decoration: none;
    line-height: 1.6;
    transition: opacity 0.2s ease;
  }

  .footer__col a:hover {
    opacity: 0.6;
  }

  @media (max-width: 768px) {
    .footer {
      padding: 40px 24px;
    }

    .footer__inner {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .footer__logo {
      font-size: 48px;
    }

    .footer__right {
      grid-template-columns: 1fr 1fr 1fr;
      gap: 24px;
    }
  }

  @media (max-width: 480px) {
    .footer__right {
      grid-template-columns: 1fr 1fr;
      gap: 24px;
    }
  }
</style>
