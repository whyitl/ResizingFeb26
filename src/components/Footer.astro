---
import { site, type SiteConfig, type SiteNavItem } from "../content/site";

type Author = SiteConfig["author"];

const { author = site.author, nav = site.nav } = Astro.props as {
  author?: Author;
  nav?: SiteNavItem[];
};
const year = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer__inner">
    <div class="footer__left">
      <span class="footer__logo">Resizing</span>
      <div class="footer__info">
        <p id="calgary-time"></p>
        <p>contact@resizing.ca</p>
      </div>
      <p class="footer__copyright">Â© {year} Resizing. All rights reserved.</p>
    </div>
    <div class="footer__right">
      <div class="footer__col">
        <h4 class="footer__col-title">Navigation</h4>
        {nav.map((item) => (
          <a href={item.href}>{item.label}</a>
        ))}
      </div>
      <div class="footer__col">
        <h4 class="footer__col-title">Socials</h4>
        <a href="https://instagram.com/resizing" target="_blank" rel="noopener">Instagram</a>
        <a href="https://www.linkedin.com/company/resizing/" target="_blank" rel="noopener">LinkedIn</a>
      </div>
      <div class="footer__col">
        <h4 class="footer__col-title">Legal</h4>
        <a href="/legal">Privacy Policy</a>
        <a href="/terms">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: rgb(59, 82, 73);
    padding: 60px 48px;
    margin: 0;
    width: 100%;
  }

  .footer__inner {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    align-items: start;
  }

  .footer__left {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .footer__logo {
    font-size: 72px;
    font-weight: 700;
    letter-spacing: -0.03em;
    line-height: 1;
    color: #ffffff;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  .footer__info {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .footer__info p {
    font-size: 14px;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.8);
    margin: 0;
    line-height: 1.5;
  }

  #calgary-time {
    cursor: help;
  }

  .footer__copyright {
    font-size: 13px;
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
    margin-top: 8px;
  }

  .footer__right {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 32px;
    padding-top: 8px;
  }

  .footer__col {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .footer__col-title {
    font-size: 15px;
    font-weight: 600;
    color: #ffffff;
    margin: 0 0 4px 0;
  }

  .footer__col a {
    font-size: 14px;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    line-height: 1.6;
    transition: opacity 0.2s ease;
  }

  .footer__col a:hover {
    opacity: 0.6;
  }

  @media (max-width: 768px) {
    .footer {
      padding: 40px 24px;
    }

    .footer__inner {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .footer__logo {
      font-size: 48px;
    }

    .footer__right {
      grid-template-columns: 1fr 1fr 1fr;
      gap: 24px;
    }
  }

  @media (max-width: 480px) {
    .footer__right {
      grid-template-columns: 1fr 1fr;
      gap: 24px;
    }
  }
</style>

<script>
  function updateCalgaryTime() {
    const timeElement = document.getElementById('calgary-time');
    if (!timeElement) return;
    
    const now = new Date();
    
    // Get Calgary time string
    const timeString = now.toLocaleTimeString('en-CA', {
      timeZone: 'America/Edmonton',
      hour12: true,
      hour: '2-digit',
      minute: '2-digit',
      second: '2-digit'
    });
    
    // Get timezone abbreviation (MST or MDT)
    const timeZone = now.toLocaleTimeString('en-US', {
      timeZone: 'America/Edmonton',
      timeZoneName: 'short'
    }).split(' ').pop();
    
    // Get the hour in Calgary time
    const calgaryHour = parseInt(now.toLocaleTimeString('en-CA', {
      timeZone: 'America/Edmonton',
      hour12: false,
      hour: '2-digit'
    }));
    
    // Set hover message based on working hours (8am-4pm)
    const hoverMessage = (calgaryHour >= 8 && calgaryHour < 16) 
      ? 'We are working' 
      : 'Currently sleeping';
    
    timeElement.textContent = `${timeString} ${timeZone}, Calgary`;
    timeElement.title = hoverMessage;
  }
  
  updateCalgaryTime();
  setInterval(updateCalgaryTime, 1000);
</script>
