---
import { site, type SiteNavItem } from "../content/site";
import CursorSwitcher from "./CursorSwitcher.astro";

const { brand = site.name, nav = site.nav } = Astro.props as {
  brand?: string;
  nav?: SiteNavItem[];
};

const path = Astro.url.pathname;
const isActive = (href: string) => (href === "/" ? path === "/" : path.startsWith(href));
---

<header class="header">
  <div class="header__inner">
    <a class="header__brand" href="/" onclick="window.location.href = '/'; window.location.reload();">
      {brand}
    </a>

    <div class="header__right">
      <nav class="header__nav" aria-label="Primary">
        <ul class="nav">
          {nav.map((item) => (
            <li class="nav__item">
              <a class={`nav__link ${isActive(item.href) ? "is-active" : ""}`} href={item.href}>
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>
      <CursorSwitcher />
    </div>
  </div>
</header>

<style>
  .header__brand {
    font-weight: 400;
  }

  .header__right {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    position: relative;
    z-index: 1;
  }

  .header__nav {
    position: relative;
    z-index: 1;
  }
</style>
