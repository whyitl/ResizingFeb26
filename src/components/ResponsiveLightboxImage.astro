---
import { Image } from "astro:assets";

interface Props {
  src: import("astro").ImageMetadata;
  alt: string;
  widths?: number[];
  sizes?: string;
}

const { src, alt, widths = [400, 800, 1200], sizes = "(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 400px" } = Astro.props;
---

<Image
  src={src}
  alt={alt}
  class="lightbox-img"
  loading="lazy"
  widths={widths}
  sizes={sizes}
/>
