---
type JsonLd = Record<string, any>;

import { site } from "../content/site";

const {
  title,
  description,
  canonical,
  ogImage,
  ogDesc = description,
  ogImageAlt = "",
  robots = site.seo.robots ?? "index,follow",
  jsonLd,
  ogType,
  themeColor = site.seo.themeColor ?? "#fbfbf9"
} = Astro.props as {
  title: string;
  description: string;
  canonical: string;
  ogImage?: string;
  ogDesc?: string;
  ogImageAlt?: string;
  robots?: string;
  jsonLd?: JsonLd | JsonLd[];
  ogType?: "website" | "article";
  themeColor?: string;
};

const jsonLdArray = Array.isArray(jsonLd) ? jsonLd : (jsonLd ? [jsonLd] : []);
const absoluteOgImage = ogImage
  ? ogImage.startsWith("http")
    ? ogImage
    : `${site.url.replace(/\/$/, "")}${ogImage.startsWith("/") ? ogImage : `/${ogImage}`}`
  : "";
const hasOg = Boolean(absoluteOgImage);

const computedOgType: "website" | "article" = ogType ?? (canonical.includes("/blog/") ? "article" : "website");

---

<title>{title}</title>

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<meta name="description" content={description} />
<link rel="canonical" href={canonical} />
<meta name="robots" content={robots} />

<meta name="theme-color" content={themeColor} />

<meta property="og:type" content={computedOgType} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={canonical} />
{hasOg && <meta property="og:image" content={absoluteOgImage} />}
{hasOg && ogImageAlt && <meta property="og:image:alt" content={ogImageAlt} />}
<meta property="og:site_name" content={site.name} />
<meta property="og:locale" content={site.locale} />


<meta name="twitter:card" content={hasOg ? "summary_large_image" : "summary"} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={ogDesc} />
{hasOg && <meta name="twitter:image" content={absoluteOgImage} />}

{/* 48x48 PNG first â€” Google Search requires 48x48+ for favicon in results */}
<link rel="icon" href={`${site.url.replace(/\/$/, "")}/favicon-48.png`} type="image/png" sizes="48x48" />
<link rel="icon" href="/favicon.svg" type="image/svg+xml" />
<link rel="alternate icon" href="/favicon.ico" />
<link rel="apple-touch-icon" href="/favicon.svg" />

{jsonLdArray.map((obj) => (
  <script type="application/ld+json" set:html={JSON.stringify(obj)} />
))}
